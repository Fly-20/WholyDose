
<div class="new-page">

{% comment %}<div class="page-banner">
  <img src="{{ section.settings.fullbanner | img_url: '3000x' }}" style="display:block; position: relative; " />
  <div class="page-banner-copy">
    
  </div>
</div>
{% endcomment %}

<h1 class="page_title">{{ section.settings.pagetitle }}</h1>
<hr class="full light-grey">
  <div class="page-wysywig">
<div class="faq-content-wrap faq-blocks cf grid"> 



  <div class="grid__item large--one-half">
    <h1>{{ section.settings.block1title }}</h1>
    {% comment %}<div class="divide"></div>{% endcomment %}
    {% for block in section.blocks %}
        {% case block.type %}
          {% when 'products' %}
          <div class="faq-box">
            <h2 class="title waypoint">{{ block.settings.faqq }}</h2>
            <div class="content">
              {{ block.settings.faqa }}
            </div>
          </div>
        {% endcase %}
     
    {% endfor %}

    
  </div>

   <div class="odd grid__item large--one-half">
    <h1>{{ section.settings.block2title }}</h1>
    {% comment %}<div class="divide"></div>{% endcomment %}
    {% for block in section.blocks %}
        {% case block.type %}
          {% when 'shipping' %}
          <div class="faq-box">
            <h2 class="title">{{ block.settings.faqq }}</h2>
            <div class="content">
              {{ block.settings.faqa }}
            </div>
          </div>
        {% endcase %}
     
    {% endfor %}

    <h1>{{ section.settings.block3title }}</h1>
    {% comment %}<div class="divide"></div>{% endcomment %}
    {% for block in section.blocks %}
        {% case block.type %}
          {% when 'returns' %}
          <div class="faq-box">
            <h2 class="title">{{ block.settings.faqq }}</h2>
            <div class="content">
              {{ block.settings.faqa }}
            </div>
          </div>
        {% endcase %}
     
    {% endfor %}

    <h1>{{ section.settings.block4title }}</h1>
    {% comment %}<div class="divide"></div>{% endcomment %}
    {% for block in section.blocks %}
        {% case block.type %}
          {% when 'covid' %}
          <div class="faq-box">
            <h2 class="title">{{ block.settings.faqq }}</h2>
            <div class="content">
              {{ block.settings.faqa }}
            </div>
          </div>
        {% endcase %}
     
    {% endfor %}
  </div>


</div>

<div class="still cf">
  {{ section.settings.still }}
</div>
  </div>
{% if section.settings.upsell != blank %}
<br/><br/>
<div class="wrapper">
  <h2 style="text-align: center">{{ section.settings.upselltext }}</h2>
  <div class="new-collection-wrap" style="padding-bottom:15px;">
    <div class="grid-uniform">
      {% assign grid_item_width = 'small--one-half medium--one-half large--one-quarter' %}
      {% for product in collections[section.settings.upsell].products limit: 4 %}
        {% include 'product-grid-item' %}
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}
</div>




