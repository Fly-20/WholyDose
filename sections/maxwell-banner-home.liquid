{% if section.blocks.size > 0 %}
<div class="main-slider">
  
  {% for block in section.blocks %}
  <div id="carousel-{{ block.id }}" class="carousel-cell">
    <div class="carousel-item">
      <a href="{% if block.settings.btn_link %}{{ block.settings.btn_link }}{% else %}javascript:void(0);{% endif %}">
        <img class="new-banner-desktop" src="{{ block.settings.image_desk | img_url: 'master', scale: 2 }}">
        <img class="new-banner-mobile" src="{{ block.settings.image_mob | img_url: 'master', scale: 2 }}">
      </a>
      {% if block.settings.title != blank or block.settings.content != blank %}
      <div class="carousel-text">
        {% if block.settings.title != blank %}
        <h2 class="h1">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.content != blank %}
        <div class="rte">
          {{ block.settings.content }}
        </div>
        {% endif %}
        {% if block.settings.btn_link != blank %}
        <a href="{{ block.settings.btn_link }}" class="btn">{{ block.settings.btn_label }}</a>
        {% endif %}
      </div>
      {% endif %}
    </div>
    <style>
      #carousel-{{ block.id }} .btn{background-color:{{ block.settings.btn_bg }};color:{{ block.settings.btn_text }};border-color:{{ block.settings.btn_text }};}
      #carousel-{{ block.id }} .btn:hover, #carousel-{{ block.id }} .btn:focus{background-color:{{ block.settings.btn_text }};color:{{ block.settings.btn_text_hover }};border-color:{{ block.settings.btn_text }};}
    </style>
  </div>
  {% endfor %}
  
</div>
{% endif %}


{% schema %}
  {
    "name": "Slideshow",
    "settings": [
      
    ],
	"blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image_desk",
            "label": "Image dekstop"
          },
          {
            "type": "image_picker",
            "id": "image_mob",
            "label": "Image mobile"
          },
          {
            "type": "textarea",
            "id": "title",
            "label": "Heading"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Text",
			"default": "<p>Default <em>richtext</em> <a href=\"https://example.com/\">content</a></p>"
          },
          {
            "type": "text",
            "id": "btn_label",
            "label": "Button label"
          },
          {
            "type": "color",
            "id": "btn_bg",
            "label": "Button Color BG"
          },
          {
            "type": "color",
            "id": "btn_text",
            "label": "Button Color Text"
          },
		  {
            "type": "color",
            "id": "btn_text_hover",
            "label": "Button Hover Color Text"
          },
		  {
            "type": "url",
            "id": "btn_link",
            "label": "Link Banner to?"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slideshow",
        "category": "Image"
      }
    ]
  }
{% endschema %}
