

<div class="wrapper">
<div class="page-text-center page-text-center--full-width">
  <h1 class="subheaders-custom-3">{{ section.settings.contenttitle }}</h1>
</div>
<img src="{{ section.settings.img1  | img_url: '2000x' }}">
</div>


<div class="wrapper">
<div class="page-text-center">
  <h1 class="subheaders-custom-3">{{ section.settings.content1toptitle }}</h1>
  <p>{{ section.settings.content1topcopy }}</p>
</div>
</div>




<div class="page-blocks">
  <h1 class="subheaders-custom-3">{{ section.settings.content1title }}</h1>
  <div class="wrapper cf">
    <div class="page-block visible-xs">
      <img src="{{ section.settings.block1 | img_url: '2000x' }}">
    </div>
    <div class="page-block">
      <div class="content">
       {{ section.settings.content1 }}
      </div>
    </div>
    <div class="page-block hidden-xs">
      <img src="{{ section.settings.block1 | img_url: '2000x' }}">
    </div>
  </div>
</div>



<div class="page-blocks">
  <h1 class="subheaders-custom-3">{{ section.settings.content2title }}</h1>
  <div class="wrapper cf">

    
    <div class="page-block">
      <img src="{{ section.settings.block2 | img_url: '2000x' }}">
    </div>
    <div class="page-block">
      <div class="content">
       {{ section.settings.content2 }}
      </div>
    </div>

   <div class="content-text">
      {{ section.settings.content3 }}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "About Page extra content ",
  "settings": [
    {
      "type": "html",
      "id": "contenttitle",
      "label": "content top title"
    },
    {
      "id": "img1",
      "type": "image_picker",
      "label": "banner img"
    },
    {
      "type": "html",
      "id": "content1toptitle",
      "label": "content 1 title"
    },
    {
      "type": "html",
      "id": "content1topcopy",
      "label": "content 1 copy"
    },
    {
      "id": "block1",
      "type": "image_picker",
      "label": "Block1 img"
    },
    {
      "type": "text",
      "id": "content1title",
      "label": "content 1 title"
    },
    {
      "type": "html",
      "id": "content1",
      "label": "content 1"
    },
    {
      "id": "block2",
      "type": "image_picker",
      "label": "Block2 img"
    },
    {
      "type": "text",
      "id": "content2title",
      "label": "content 2 title"
    },
    {
      "type": "html",
      "id": "content2",
      "label": "content 2"
    },
    {
      "type": "html",
      "id": "content3",
      "label": "content 3"
    }
  ]
}
{% endschema %}