<div>
  <div>
    <h1>{{section.settings.heading}}</h1>
  </div>
  <img src={{ section.settings.img | img_url: 'x400' }} 
     alt={{ section.settings.img.alt }}>
</div>

{% schema %}
  {
    "name": "Before + After",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "image_picker",
        "id": "img",
        "label": "Image"
      }
    ],
    "presets": [
      {
        "name": "Before + After",
        "category": "Custom"
      }
    ]
  }
{% endschema %}