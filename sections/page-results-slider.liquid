<div class="wrapper">
  <div class="results-page-slider">
	{% for block in section.blocks %}

    <div class="carousel-cell">
      <h2>{{ block.settings.texttitle }}</h2>
      <img src="{{ block.settings.img | img_url: '2000x' }}" alt="Wholy Dose Results - Skin Care Results">
      <div style="padding: 30px 0;">
        {{ block.settings.text }}
      </div>
    </div>

	{% endfor %}
  </div>
</div>


{% schema %}
{
  "name": "Results Slider",
  "blocks": [
    {
      "type": "image",
      "name": "image",
      "settings": [
        {
          "id": "img",
          "type": "image_picker",
          "label": "Results img"
        },
        {
          "id": "texttitle",
          "type": "text",
          "label": "Text title"
        },
        {
          "id": "text",
          "type": "richtext",
       		"label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}